---
import Language from '../components/Language.astro'
import {t} from 'i18next'
import {MenuIcon} from 'astro-feather';
---
<nav class="flex justify-between fixed p-4 w-svw left-0 z-50 bg-white">
	<span>Leo Carvalho</span>

	<div class="group">
		<button class="sm:hidden block">
			<MenuIcon />
		</button>
		<div id="nav-links" class="h-auto bg-transparent gap-4 text-center hidden sm:flex items-center justify-center  transition-all delay-1000
		sm:group-focus-within:auto
		group-focus-within:flex
		sm:group-focus-within:static
		group-focus-within:absolute
		sm:group-focus-within:inset-auto
		group-focus-within:inset-0
		sm:group-focus-within:h-auto
		group-focus-within:h-dvh
		sm:group-focus-within:flex-row
		group-focus-within:flex-col
		sm:group-focus-within:bg-auto
		group-focus-within:bg-white
		"
		>
			<a href="#hero" class="active">{t('hero.title')}</a>
			<a href="#projects">{t('projects.title')}</a>
			<a href="#repos">{t('repos.title')}</a>		
			<!-- <a href="#contact">Contact</a> -->
			<Language/>
		</div>
	</div>
</nav>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const sections = document.querySelectorAll("#container > section");
		const navLi = document.querySelectorAll("#nav-links > a") as NodeListOf<HTMLLinkElement>;
		const navigation = document.getElementById('navigation') as HTMLElement;

		window.addEventListener('scroll', () => {
			if (scrollY > 100) {
				navigation?.classList.add('border-b')
			} else {
				navigation?.classList.remove('border-b')
			}

			// highlight navigation
			let currentSectionId: string = "";

			sections.forEach((section) => {
				// @ts-ignore
				const sectionTop = section.offsetTop;
				if (scrollY >= sectionTop - 300) {
					currentSectionId = section.getAttribute("id") ?? "";
				}
			});

			navLi.forEach((li) => {
				li.classList.remove("active");

				if (li.href.includes(currentSectionId)) {
					li.classList.add('active');
				}
			});
		}, { passive: true })
	}, false);
</script>
<script is:inline>
	const links = document.getElementById("nav-links");
	const mobileClasses = [
		'flex',
		'absolute',
		'flex-col',
		'my-4',
		'p-24',
		'bg-white',
		'rounded',
		'border',
		'right-0',
		'left-0',
		'top-8',
		'h-dvh',
		'row',
		'justify-center',
		'text-xl'
	]

	function showMenu() {
		links.classList.remove('hidden');
		mobileClasses.forEach((singleClass) => links.classList.add(singleClass))
	}

	function hideMenu() {
		links.classList.add('hidden');
		mobileClasses.forEach((singleClass) => links.classList.remove(singleClass))
	}

	function toggleMenu() {
		if (links.classList.contains('hidden')) {
			showMenu()
		} else {
			hideMenu()
		}
	}
</script>