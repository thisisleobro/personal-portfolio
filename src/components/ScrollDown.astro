---
import {ChevronDownIcon} from 'astro-feather';
---
<div class="absolute right-16 bottom-16 transition-all delay-500 bg-blue-200 rounded-[50%] p-2" id="scroll">
	<ChevronDownIcon />
</div>


<script>
	document.addEventListener('DOMContentLoaded', function() {
		const scroll = document.getElementById("scroll")

		window.addEventListener('scroll', () => {
			if (scrollY > 50) {
				scroll.classList.add('opacity-0')
			} else {
				scroll.classList.remove('opacity-0')
			}
		}, { passive: true })
	}, false);
</script>