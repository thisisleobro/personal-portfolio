---
import {ChevronDownIcon} from 'astro-feather';
---
<button class="absolute sm:right-16 right-[50%] translate-x-[50%] bottom-8 transition-all delay-500" id="scroll">
	<div class="animate-bounce bg-blue-200 rounded-[50%] p-2">
		<ChevronDownIcon />
	</div>
</button>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const scroll = document.getElementById("scroll")

		scroll?.addEventListener('click', () => {location.hash = 'projects'})

		window.addEventListener('scroll', (_event) => {
			if (scrollY > 50) {
				scroll?.classList.add('opacity-0')
			} else {
				scroll?.classList.remove('opacity-0')
			}
		}, { passive: true })
	}, false);
</script>