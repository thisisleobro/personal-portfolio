---
import '../styles/global.css'
import Posthog from '../components/Analytics/Posthog.astro'
import Umami from '../components/Analytics/Umami.astro'

import {author} from '../constants'
import {t} from 'i18next'
import { initI18n } from '../lib/i18n'
import Footer from './Footer.astro'
import Navigation from './Nav.astro'
import { ClientRouter } from "astro:transitions"

await initI18n(Astro.currentLocale)

interface Props {
	showLanguageMenu?: boolean,
	title: string | undefined,
}

const {title, showLanguageMenu = true} = Astro.props
---
<!doctype html>
<html lang={Astro.currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title? `${title} | ${author}`: author}</title>
		<meta name="description" content={t('description')} />
		<meta name="author" content={author} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<ClientRouter />
		<Posthog />
		<Umami />
	</head>
	<body class={`text-slate-800 stroke-slate-800 min-h-dvh`}>
		<Navigation showLanguageMenu={showLanguageMenu} />
		<slot />
		<Footer />
	</body>
</html>

<script>
	document.addEventListener('astro:page-load', () => {
		const email = ['c', 'a', 'r', 'v', 'a', 'l', 'h', 'o', '@', 'p', 'o', 's', 't', '.', 'c', 'o', 'm']
		const emailElements = document.querySelectorAll('a.author-email')

		emailElements.forEach((element) => (element as HTMLAnchorElement).href = `mailto:${email.join('')}`)
	})
</script>