---
import Layout from '../layouts/Layout.astro';
// TODO: check locale client side fill message
---
<Layout title={'404 - Not Found'}>
	<div class="flex flex-col items-center justify-center h-dvh">
		<h1 class="text-4xl mb-4">404 - Not Found</h1>
		<p class="text-lg">Path: <span id='not-found-path'></span></p>
	</div>

	<script>
		const notFoundPath = document.getElementById('not-found-path')
		notFoundPath && (notFoundPath.textContent = location.pathname)
	</script>
</Layout>