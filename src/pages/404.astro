---
import {t} from 'i18next';
import Layout from '../layouts/Layout.astro';
---
<Layout title={`404 - ${t('not_found.title')}`}>
	<div class="flex flex-col items-center justify-center h-dvh">
		<h1 class="text-4xl mb-4">404 - {t('not_found.title')}</h1>
		<p class="text-lg">{t('not_found.path')}: <span id='not-found-path'></span></p>
	</div>

	<script>
		const notFoundPath = document.getElementById('not-found-path')
		notFoundPath && (notFoundPath.textContent = location.pathname)
	</script>
</Layout>